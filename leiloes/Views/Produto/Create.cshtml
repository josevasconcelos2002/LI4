@model leiloes.Models.Produto

<!-- VIEW PROVISÓRIA - SÓ PARA TESTAR -->

@{
    ViewData["Title"] = "Adicionar Produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição:</label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Imagem">Imagem (URL):</label>
        <input asp-for="Imagem" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumDonosAnt">Número de Donos Anteriores:</label>
        <input asp-for="NumDonosAnt" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

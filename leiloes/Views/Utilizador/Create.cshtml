@model leiloes.Models.Utilizador

<!-- VIEW PROVISÓRIA - SÓ PARA TESTAR -->

@{
    ViewData["Title"] = "Adicionar Utilizador";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nif">NIF:</label>
        <input asp-for="Nif" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Username">Username (URL):</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserType">Tipo de Utilizador:</label>
        <input asp-for="UserType" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Saldo">Id do Saldo:</label>
        <input asp-for="Saldo" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

@model leiloes.Models.Leilao

<!-- VIEW PROVISÓRIA - SÓ PARA TESTAR -->

@{
    ViewData["Title"] = "Adicionar Leilao";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="LicitacaoAtual">Licitacão Atual:</label>
        <input asp-for="LicitacaoAtual" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="PrecoMinLicitacao">Valor de abertura:</label>
        <input asp-for="PrecoMinLicitacao" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="Estado">Estado:</label>
        <input asp-for="Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataInicial">Data Inicial:</label>
        <input asp-for="DataInicial" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DataFinal">Data Final:</label>
        <input asp-for="DataFinal" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="CriadorId">Id do Criador:</label>
        <input asp-for="CriadorId" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="ProdutoId">Id do Produto:</label>
        <input asp-for="ProdutoId" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

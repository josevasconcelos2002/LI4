@model leiloes.Models.Leilao

<!-- VIEW PROVISÓRIA - SÓ PARA TESTAR -->

@{
    ViewBag.Title = "Excluir Leilao";
}

<h2>Excluir Leilao</h2>

<h3>Tem certeza de que deseja excluir este Leilao?</h3>
<div>
    <h4>Lielao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LicitacaoAtual)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecoMinLicitacao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataInicial)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.CriadorId)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>



        <!-- Outros campos do leilao podem ser incluídos aqui -->

    </dl>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>

@model leiloes.Models.Utilizador

<!-- VIEW PROVISÓRIA - SÓ PARA TESTAR -->

@{
    ViewBag.Title = "Excluir Utilizador";
}

<h2>Excluir Utilizador</h2>

<h3>Tem certeza de que deseja excluir este Utilizador?</h3>
<div>
    <h4>Lielao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nif)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.UserType)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Saldo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>
